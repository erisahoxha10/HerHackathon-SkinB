<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="9dp"
        android:orientation="vertical"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/introduction"
            android:layout_margin="15dp"
            android:textSize="50px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10px">

            <Switch
                android:id="@+id/switch_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Switch>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/location_toggle"
                android:textSize="50px" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10px">

            <Switch
                android:id="@+id/health"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Switch>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Health"
                android:textSize="50px" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10px">

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Switch>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Temperature"
                android:textSize="50px" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10px">

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Switch>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Menstrual cycle"
                android:textSize="50px" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10px">

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Switch>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stress level"
                android:textSize="50px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10px">

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Switch>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sleep"
                android:textSize="50px" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/image_tone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/btn0"            >
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/face_cropped_side"
                android:contentDescription="TODO" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:background="@color/white"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn0"
                    android:layout_marginVertical="10dp"
                    android:layout_width="120px"
                    android:layout_height="120px"
                    android:backgroundTint="@color/btn0"
                    android:background="@drawable/roundedbutton"
                    />

                <Button
                    android:id="@+id/btn1"
                    android:layout_marginVertical="10dp"
                    android:layout_width="120px"
                    android:layout_height="120px"
                    android:backgroundTint="@color/btn1"
                    android:background="@drawable/roundedbutton"
                    />

                <Button
                    android:id="@+id/btn2"
                    android:layout_marginVertical="10dp"
                    android:layout_width="120px"
                    android:layout_height="120px"
                    android:backgroundTint="@color/btn2"
                    android:background="@drawable/roundedbutton"
                    />

                <Button
                    android:id="@+id/btn3"
                    android:layout_marginVertical="10dp"
                    android:layout_width="120px"
                    android:layout_height="120px"
                    app:strokeColor="@color/black"
                    android:backgroundTint="@color/btn3"
                    android:background="@drawable/roundedbutton"
                    />

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="120px"
                    android:layout_marginVertical="10dp"
                    android:layout_height="120px"
                    android:backgroundTint="@color/btn4"
                    android:background="@drawable/roundedbutton"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select your skin tone"
                android:textAlignment="center"/>
        </LinearLayout>


        <Button
            android:id="@+id/button_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ctn"
            />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>